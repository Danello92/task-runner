{
  "name": "task-runner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "init-project": "npm install && npm install && npm run init:dirs && npm run init:files && npm run init:gitignore",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "test": "npm run test:html",
    "test:html": "html-validate *.html",
    "build:sass": "node-sass  compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build": "npm run build:sass && npm run build:autoprefixer && test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Danello92/task-runner.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Danello92/task-runner/issues"
  },
  "homepage": "https://github.com/Danello92/task-runner#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "html-validate": "^3.0.0",
    "node-sass": "^4.14.1"
  }
}
